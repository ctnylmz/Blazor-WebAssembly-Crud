@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<br /><br /><br />
<div class="col-lg-8 mx-auto m-5">
    <a href="/Admin/Category/Add" class="btn btn-primary w-100 my-4">Add New Category</a>

    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Category List</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.name</td>
                                <td>@category.status</td>
                                <td>
                                    <a href="/Admin/Category/Delete/@category.id" class="btn btn-danger mr-2">Delete</a>
                                    <a href="/Admin/Category/Update/@category.id" class="btn btn-primary">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

