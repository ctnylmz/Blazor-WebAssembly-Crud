@model TestimonialViewModel

<div class="col-md-8 mx-auto" style="margin-top:100px;">
    <div class="card">
        <form method="post">
            <div class="card-header">
                <div class="card-title">New Testimonial</div>
            </div>
            <div class="card-body">
                <input type="hidden" asp-for="id" class="form-control input-square" id="squareInput">

                <div class="form-group">
                    <label for="squareInput">Testimonial Name</label>
                    <input type="text" asp-for="name" class="form-control input-square" id="squareInput">
                </div>

                <div class="form-group">
                    <label for="squareInput">Testimonial title</label>
                    <input type="text" asp-for="title" class="form-control input-square" id="squareInput">
                </div>

                <div class="form-group">
                    <label for="squareInput">Testimonial comment</label>
                    <input type="text" asp-for="comment" class="form-control input-square" id="squareInput">
                </div>

                <div class="form-group">
                    <label for="squareInput">Testimonial imageUrl</label>
                    <input type="text" asp-for="imageUrl" class="form-control input-square" id="squareInput">
                </div>

                <div class="form-group">
                    <label for="squareSelect">Testimonial Status</label>
                    <select asp-for="status" class="form-control input-square" id="squareSelect">
                        <option>True</option>
                        <option>False</option>
                    </select>
                </div>

            </div>
            <div class="card-action d-flex">
                <a href="/Admin/Testimonial" class="btn btn-danger w-25">Cancel</a>
                <button class="btn btn-success w-25 ml-auto">Submit</button>
            </div>

        </form>
    </div>

</div>
