@model List<SocialMediaViewModel>
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="col-lg-8 mx-auto m-5">
    <a href="/Admin/SosicalMedia/Add" class="btn btn-primary w-100 my-4">Add New Sosical Media</a>

    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Sosical Media List</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Url</th>
                            <th>Icon</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sosicalMedia in Model)
                        {
                            <tr>
                                <td>@sosicalMedia.title</td>
                                <td>@sosicalMedia.url</td>
                                <td>@sosicalMedia.icon</td>
                                <td>
                                    <a href="/Admin/SosicalMedia/Delete/@sosicalMedia.id" class="btn btn-danger mr-2">Delete</a>
                                    <a href="/Admin/SosicalMedia/Update/@sosicalMedia.id" class="btn btn-primary">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

