@model BookingViewModel

<div class="col-md-8 mx-auto" style="margin-top:100px;">
    <div class="card">
        <form method="post">
            <div class="card-header">
                <div class="card-title">Update Reservation</div>
            </div>
            <input type="hidden" asp-for="id" class="form-control input-square" id="squareInput">

            <div class="card-body">
                <div class="form-group">
                    <label for="squareInput">Reservation Name</label>
                    <input type="text" asp-for="name" class="form-control input-square" id="squareInput">
                </div>

                <div class="form-group">
                    <label for="squareInput">Reservation Phone</label>
                    <input type="text" asp-for="phone" class="form-control input-square" id="squareInput">
                </div>

                <div class="form-group">
                    <label for="squareInput">Reservation Mail</label>
                    <input type="text" asp-for="mail" class="form-control input-square" id="squareInput">
                </div>

                <div class="form-group">
                    <label for="squareInput">Reservation Person Count</label>
                    <input type="text" asp-for="personCount" class="form-control input-square" id="squareInput">
                </div>

            </div>
            <div class="card-action d-flex">
                <a href="/Admin/Booking" class="btn btn-danger w-25">Cancel</a>
                <button class="btn btn-success w-25 ml-auto">Submit</button>
            </div>

        </form>
    </div>

</div>
