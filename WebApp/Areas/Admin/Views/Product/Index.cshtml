@model List<ProductViewModel>
@{
    ViewData["Title"] = "Index";
}


<br />
<div class="col-lg-11 mx-auto m-5">
    <a href="/Admin/Product/Add" class="btn btn-primary w-100 my-4">Add New Product</a>

    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Product List</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Product Name</th>
                            <th>Product Description</th>
                            <th>Product Price</th>
                            <th>Product imageUrl</th>
                            <th>Status</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.categoryName</td>
                                <td>@product.name</td>
                                <td>@product.description</td>
                                <td>@product.price</td>
                                <td>@product.imageUrl</td>
                                <td>@product.status</td>
                                <td>
                                    <a href="/Admin/Product/Delete/@product.id" class="btn btn-danger mr-2">Delete</a>
                                    <a href="/Admin/Product/Update/@product.id" class="btn btn-primary">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

